{
	"name": "ardrive-cli",
	"version": "0.2.12",
	"description": "The ArDrive Command Line Interface (CLI) contains all of the needed security, file synchronization and Arweave wallet capabilities via a node.js application.",
	"main": "./lib/index.js",
	"bin": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"dependencies": {
		"@types/node": "^14.14.32",
		"@types/uuid": "^8.3.0",
		"ardrive-core-js": "REPLACE WITH you local ardrive-core",
		"arweave": "1.10.11",
		"arweave-bundles": "^1.0.3",
		"community-js": "^1.1.36",
		"progress": "^2.0.3",
		"prompt-password": "^1.2.0",
		"prompt-sync": "^4.2.0",
		"prompts": "^2.4.0",
		"typescript": "^4.2.3",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/jwk-to-pem": "^2.0.0",
		"@types/prompt-sync": "^4.1.0",
		"@types/prompts": "^2.0.9",
		"@typescript-eslint/eslint-plugin": "^4.18.0",
		"@typescript-eslint/parser": "^4.18.0",
		"eslint": "^7.23.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "latest",
		"husky": "=4",
		"lint-staged": ">=10",
		"prettier": "^2.2.1",
		"ts-node": "^9.1.1"
	},
	"scripts": {
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint . --ext .ts",
		"lintfix": "eslint . --ext .ts --fix",
		"build": "tsc",
		"prepare": "yarn run build",
		"preversion": "yarn run lint",
		"version": "yarn run format && git add -A src",
		"postversion": "git push && git push --tags",
		"start": "yarn run build && node ./lib/index.js"
	},
